{
  "name": "uhb-live",
  "version": "0.3.1",
  "description": "Web-frontend for video streams with open chat ability",
  "main": "dist/app.js",
  "type": "module",
  "author": "Erik Michelson <opensource@erik.michelson.eu>",
  "license": "MIT",
  "private": true,
  "scripts": {
    "start": "node --experimental-specifier-resolution=node dist/app.js",
    "lint": "yarn run lint-code && yarn run lint-openapi",
    "build": "yarn run build-server && yarn run build-ui",
    "watch": "echo 'Run yarn watch-server and yarn watch-ui in separate console windows.'",
    "build-server": "tsc",
    "watch-server": "nodemon --ext ts --exec 'tsc --incremental && yarn start'",
    "build-ui": "webpack --config webpack.prod.cjs",
    "watch-ui": "webpack --config webpack.dev.cjs --watch",
    "lint-code": "eslint --ext .ts src",
    "lint-openapi": "speccy lint docs/openapi.yml"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/stugen/uhb-live.git"
  },
  "dependencies": {
    "@fortawesome/fontawesome-svg-core": "1.2.32",
    "@fortawesome/free-brands-svg-icons": "5.15.1",
    "@fortawesome/free-solid-svg-icons": "5.15.1",
    "@fortawesome/vue-fontawesome": "0.1.10",
    "@types/js-yaml": "3.12.5",
    "@types/jsonwebtoken": "8.5.0",
    "@types/node-fetch": "2.5.7",
    "@types/randomstring": "1.1.6",
    "@types/video.js": "7.3.11",
    "bad-words": "3.0.3",
    "body-parser": "1.19.0",
    "bulma": "0.9.1",
    "compression": "1.7.4",
    "convict": "6.0.0",
    "convict-format-with-validator": "6.0.0",
    "express": "4.17.1",
    "helmet": "4.2.0",
    "js-yaml": "3.14.0",
    "jsonwebtoken": "8.5.1",
    "luxon": "1.25.0",
    "markdown-it": "12.0.2",
    "mysql": "2.18.1",
    "node-fetch": "2.6.1",
    "randomstring": "1.1.5",
    "reflect-metadata": "0.1.13",
    "sqlite3": "5.0.0",
    "typeorm": "0.2.29",
    "video.js": "7.8.4",
    "videojs-contrib-quality-levels": "2.0.9",
    "videojs-hls-quality-selector": "1.1.4",
    "videojs-youtube": "2.6.1",
    "vue": "2.6.12",
    "vue-datetime": "1.0.0-beta.14",
    "vue-i18n": "8.22.0",
    "vue-router": "3.4.6",
    "vuex": "3.5.1",
    "weekstart": "1.0.1",
    "ws": "7.3.1"
  },
  "devDependencies": {
    "@types/bad-words": "3.0.0",
    "@types/compression": "1.7.0",
    "@types/convict": "5.2.1",
    "@types/express": "4.17.8",
    "@types/luxon": "1.25.0",
    "@types/node": "14.14.6",
    "@types/ws": "7.2.9",
    "@typescript-eslint/eslint-plugin": "4.6.1",
    "@typescript-eslint/parser": "4.6.1",
    "clean-webpack-plugin": "3.0.0",
    "css-loader": "4.3.0",
    "eslint": "6.8.0",
    "eslint-config-standard": "14.1.1",
    "eslint-plugin-import": "2.22.1",
    "eslint-plugin-node": "11.1.0",
    "eslint-plugin-promise": "4.2.1",
    "eslint-plugin-standard": "4.0.1",
    "file-loader": "6.1.1",
    "html-webpack-plugin": "4.5.0",
    "mini-css-extract-plugin": "0.10.1",
    "node-sass": "4.14.1",
    "nodemon": "2.0.6",
    "sass-loader": "9.0.3",
    "speccy": "0.11.0",
    "style-loader": "1.3.0",
    "ts-loader": "8.0.5",
    "typescript": "4.0.5",
    "vue-loader": "15.9.3",
    "vue-style-loader": "4.1.2",
    "vue-template-compiler": "2.6.12",
    "webpack": "4.44.2",
    "webpack-cli": "3.3.12"
  }
}
